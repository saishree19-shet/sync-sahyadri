{
    "name": "teammate-app",
    "version": "1.0.0",
    "description": "College project collaboration platform with swipe-based matching",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "client": "cd client && npm start",
        "server": "cd server && npm run dev",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "install-all": "npm install && cd client && npm install && cd ../server && npm install",
        "build": "cd client && npm run build",
        "test": "npm run test --workspaces"
    },
    "keywords": [
        "college",
        "collaboration",
        "matching",
        "react",
        "nodejs",
        "firebase"
    ],
    "author": "Sahyadri College Team",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "dependencies": {
        "firebase": "^12.7.0"
    }
}
